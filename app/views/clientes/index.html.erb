<br><br><br><br><br><br><br>

<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Clientes:</h1>
  <hr>
  <nav class="navbar bg-light">
  <div class="container-fluid">
    <form action="/clientes" method="get" class="d-flex" role="search">
      <input type="type" name="nome" value="<%= params[:nome] %>" class="form-control me-2" type="search"
        placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>
<br>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Mostrar', cliente, :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Apagar', cliente, 
         method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '+ Novo', new_cliente_path,  :class => "btn btn-primary" %>

</div>
