<br><br><br><br><br><br><br>

<p id="notice"><%= notice %></p>

<div class="container">
<h1>Despesas:</h1>
<hr>
<nav class="navbar bg-light">
    <div class="container-fluid">
      <form action="/despesas" method="get" class="d-flex" role="search">
        <input type="type" name="nome" value="<%= params[:nome] %>" class="form-control me-2" type="search"
          placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <br>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @despesas.each do |despesa| %>
      <tr>
        <td><%= despesa.nome %></td>
        <td><%= despesa.descricao %></td>
        <td><%= despesa.valor %></td>
        <td><%= link_to 'Mostrar', despesa, :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editar', edit_despesa_path(despesa), :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Apagar', despesa, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Novo', new_despesa_path, :class => "btn btn-primary" %>
</div>
