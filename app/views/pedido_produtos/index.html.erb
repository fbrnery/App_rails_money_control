<div class="container">
<p id="notice"><%= notice %></p>
<h1>Pedido Produtos</h1>
<hr>

<table class="table">
  <thead>
    <tr>
     
      <th>Produto</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedido_produtos.each do |pedido_produto| %>
      <tr>
        <td><%= pedido_produto.produto.id %></td>
        <td><%= pedido_produto.produto.nome %></td>
        <td><%= pedido_produto.valor %></td>
        <td><%= link_to 'Mostrar', pedido_pedido_produto_path(@pedido, pedido_produto), :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editar', edit_pedido_pedido_produto_path(@pedido,pedido_produto), :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Apagar', pedido_pedido_produto_path(@pedido, pedido_produto), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Novo', new_pedido_pedido_produto_path(@pedido), :class => "btn btn-primary" %>
                     