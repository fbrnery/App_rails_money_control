<br><br><br><br><br><br><br>
<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Produtos:</h1>
  <hr>
  <nav class="navbar bg-light">
    <div class="container-fluid">
      <form action="/produtos" method="get" class="d-flex" role="search">
        <input type="type" name="nome" value="<%= params[:nome] %>" class="form-control me-2" type="search"
          placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <br>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Quantidade</th>
        <th>Vencimento</th>
        <th>Preco compra</th>
        <th>Preco venda</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.vencimento .strftime("%d/%m/%Y") %></td>
        <td><%= produto.preco_compra %></td>
        <td><%= produto.preco_venda %></td>
        <td><%= link_to 'Mostrar', produto, :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), :class => "btn btn-outline-primary" %></td>
        <td>
          <%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '+ Novo', new_produto_path, :class => "btn btn-primary" %>
</div>